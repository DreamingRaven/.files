# py3status configuration file (~/.config/py3status/config)

order += "spotify"
order += "volume master"
#order += "wireless _first"
order += "ethernet _first_"
#order += "battery all"
order += "clock"

spotify {
    # requires: python-dbus
    button_next = 4
    button_play_pause = 1
    button_previous = 5
    format = "{title} by {artist} -> {time}"
    format_down = "no Spotify"
}

volume master {
    format = "vol: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
    on_click 1 = "exec pavucontrol"
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
}

clock {
	format = ["{Local}"]
	format_time = "{name} %Y-%m-%d %H:%M"
}
