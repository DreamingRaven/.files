# py3status configuration file (~/.config/py3status/config)

order += "volume master"
order += "wireless _first"
order += "ethernet _first"
order += "battery all"
order += "clock"

volume master {
    format = "vol: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
    on_click 1 = "exec pavucontrol"
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
}

clock {
	format = ["{Europe/London}"]
	format_time = "{name} %Y-%m-%d %H:%M"
}
